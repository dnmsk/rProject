@using System.Web.Mvc
@using MainLogic.WebFiles
@using Project_B.CodeClientSide.Helper

@functions {
    private new static System.Web.Mvc.HtmlHelper Html {
        get { return ((WebViewPage) WebPageContext.Current.Page).Html; }
    }

    private new static System.Web.Mvc.UrlHelper Url {
        get { return ((WebViewPage) WebPageContext.Current.Page).Url; }
    }

}

@helper UrlActionCreateExternalLink(BaseModel baseModel, short linkID) {
    @Html.Raw(RedirectLinkHelper.CreateHrefToExternalRedirect(Url, baseModel.SessionModule.GuestID, linkID))
}

@helper UrlActionCreateInternalLink(BaseModel baseModel, short linkID) {
    @Html.Raw(RedirectLinkHelper.CreateHrefToInternalRedirect(Url, baseModel.SessionModule.GuestID, linkID))
}