@model Spywords_Project.Models.PhraseModel

@{
    ViewBag.Title = "Мои запросы";
}

<h2>Мои запросы</h2>
<br/>
<hr/>
<h3>Добавить запрос</h3>
<form action="@Url.Action("AddPhrase", "Phrase")" class="form-inline" method="POST">
    <div class="form-group" style="width: 350px;">
        <label for="phrase">Текст</label>
        <input type="text" class="form-control" name="phrase" id="phrase" placeholder="Текст запроса">
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
<br />

@if (Model.PhraseEntities.Count == 0) {
    return;
}
<table class="table table-hover">
    <tr>
        <th>Запрос</th>
        <th>Сайтов в Яндекс</th>
        <th>Сайтов в Google</th>
        <th>Статистика сбора</th>
    </tr>
    @foreach (var phrase in Model.PhraseEntities) {
        <tr>
            <td><a href="@Url.Action("PhraseDomains", "Phrase", new {id=phrase.PhraseAccountID})"><b>@phrase.Text</b></a></td>
            <td>@phrase.AdvertsYandex</td>
            <td>@phrase.AdvertsGoogle</td>
            <td>@phrase.CollectedDomainsCount / @phrase.DomainsCount</td>
        </tr>
    }
</table>